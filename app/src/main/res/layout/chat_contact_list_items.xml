<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/contact_list_ui1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        app:cardCornerRadius="60dp">
        <ImageView
            android:id="@+id/contact_list_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/contact_list_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/contact_list_ui1"
        android:text="User Name"
        android:textSize="21sp"
        android:textColor="@color/black"
        android:fontFamily="@font/ibmplexsans_regular"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="8dp"/>

    <TextView
        android:id="@+id/contact_list_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/contact_list_ui1"
        android:layout_below="@id/contact_list_user_name"
        android:text="User Email"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:fontFamily="@font/ibmplexsans_regular"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="8dp"/>


</RelativeLayout>