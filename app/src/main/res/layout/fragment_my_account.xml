<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.MyAccountFragment">

    <TextView
        android:id="@+id/fragment_my_account_saveBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:text="Save"
        android:textColor="@color/logoColor"
        android:textSize="20sp"
        android:textStyle="bold" />


    <androidx.cardview.widget.CardView
        android:id="@+id/fragment_my_account_CV_UI1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardCornerRadius="80dp"
        android:layout_below="@id/fragment_my_account_saveBTN"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/fragment_my_account_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/fragment_my_account_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account"
        android:textSize="25sp"
        android:layout_below="@id/fragment_my_account_CV_UI1"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/fragment_my_account_CV_UI2"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@id/fragment_my_account_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/lightgrey">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/fragment_my_account_email_logo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/email"
                android:layout_margin="10dp"/>
            <EditText
                android:id="@+id/fragment_my_account_email_input"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:textSize="15dp"
                android:hint="Email"
                android:inputType="text"
                android:maxLines="1"
                android:background="@null" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/fragment_my_account_CV_UI3"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@id/fragment_my_account_CV_UI2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/lightgrey">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/fragment_my_account_user_logo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_baseline_person_24_white"
                android:layout_margin="10dp"/>
            <EditText
                android:id="@+id/fragment_my_account_user_name_input"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:textSize="15dp"
                android:hint="User Name"
                android:inputType="text"
                android:maxLines="1"
                android:background="@null" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/fragment_my_account_CV_UI4"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@id/fragment_my_account_CV_UI3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/lightgrey">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/fragment_my_account_Education_logo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_baseline_school_24"
                android:layout_margin="10dp"/>
            <EditText
                android:id="@+id/fragment_my_account_education_input"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:textSize="15dp"
                android:hint="Education Level"
                android:inputType="text"
                android:maxLines="1"
                android:background="@null" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/fragment_my_account_CV_UI5"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@id/fragment_my_account_CV_UI4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/lightgrey">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/fragment_my_account_College_logo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_baseline_account_coll_24"
                android:layout_margin="10dp"/>
            <EditText
                android:id="@+id/fragment_my_account_college_input"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:textSize="15dp"
                android:hint="College"
                android:inputType="text"
                android:maxLines="1"
                android:background="@null" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>