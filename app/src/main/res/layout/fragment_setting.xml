<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.SettingFragment">

    <TextView
        android:id="@+id/setting_fragment_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="30sp"
        android:padding="5dp"
        android:gravity="center"
        android:background="@color/logoColor"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/setting_fragment_user_profile"
        android:layout_below="@id/setting_fragment_title"
        android:layout_width="match_parent"
        android:layout_height="130dp">

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardCornerRadius="80dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp">
            <ImageView
                android:id="@+id/setting_fragment_user_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/setting_fragment_user_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="User name"
            android:textSize="25sp"
            android:maxLines="1"
            android:fontFamily="@font/varelaround_regular"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="140dp"
            android:textColor="@color/black"
            android:ellipsize="end"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Profile"
            android:fontFamily="@font/varelaround_regular"
            android:textSize="15sp"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="145dp"/>

        <ImageView
            android:id="@+id/setting_fragment_go_myAccount_BTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_chevron_right_80"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="325dp"/>

    </androidx.cardview.widget.CardView>


</RelativeLayout>